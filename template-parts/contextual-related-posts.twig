{% if related_posts %}
	<div class="cl-related-posts">
		{% for post in related_posts %}
			<div class="cl-related-post">
				<a href="{{post.link}}" class="cl-related-post-link" rel="bookmark">
					{% if post.thumbnail.src %}
						<img
							src="{{ post.thumbnail.src( 'post-thumbnail' ) }}"
							class="cl-related-post-thumbnail"
							alt="Image for {{ post.title }}"
							srcset="{{ post.thumbnail.srcset }}"
							sizes="{{ post.thumbnail.img_sizes }}"
						/>
					{% endif %}
					<h2 class="cl-related-entry-title">{{ post.title }}</h2>

					<div class="cl-related-post-excerpt">
						{{post.preview.read_more(false).length(50)}}
					</div>
				</a>
			</div>

		{% endfor %}
	</div>
{% endif %}